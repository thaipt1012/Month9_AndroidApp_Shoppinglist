<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/editcatebg">"
		            <TextView 
		                android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#0935B0"
			            android:textSize="15dp"
			            android:text="Thay đổi tên mặt hàng"
			            android:layout_gravity="center_horizontal"
		            />
		            
			        <EditText 
			        android:id="@+id/editCateTitle"
			        android:layout_width="150dp"
			        android:layout_height="30dp"
			        android:textSize="10dp"
			        android:text="cate name"
			        android:layout_gravity="center_horizontal"
			        android:layout_margin="10dp"
			        />
			        <TextView 
		                android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#0935B0"
			            android:textSize="10dp"
			            android:text="Đổi hình minh họa"
			            android:layout_gravity="center_horizontal"
			            android:layout_margin="5dp"
		            />
			        <ImageView 
			        android:id="@+id/editselectImgCate1"
			        android:layout_width="90dp"
			        android:layout_height="90dp"
			        android:layout_gravity="center_horizontal"
			        android:layout_margin="10dp"
			        android:onClick="selectthis"
			            />
			      
			        <Button
				        android:id="@+id/editCate"
				        android:layout_width="wrap_content"
				        android:layout_height="35dp"
				        android:text="Đồng ý thay đổi"
				        android:textSize="10dp"
				        android:layout_gravity="center_horizontal"
				        android:textStyle="bold"
				        android:layout_margin="10dp"
		            />
			        <EditText 
				        android:id="@+id/editCateImgUrl"
				        android:layout_width="0dp"
				        android:layout_height="0dp"
				        android:textSize="10dp"
				        android:visibility="invisible"
				        />
</LinearLayout>