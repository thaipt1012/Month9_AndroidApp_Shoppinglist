<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgcate"
    >
    <ListView 
        android:orientation="vertical"
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/border_list"
        ></ListView>
          <TextView 
             android:id="@+id/list_cates"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignParentBottom="true"
		     
              />
          <SlidingDrawer
		     android:id="@+id/drawer"
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:orientation="vertical"
		     android:handle="@+id/handle"
		     android:content="@+id/content"
		     android:layout_alignParentBottom="true"
		     >
		     <RelativeLayout 
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		  
		         >
		     <ImageView 
		         android:id="@+id/handle"
		         android:layout_width="fill_parent"
		         android:layout_height="35dp"
		         android:layout_alignParentRight="true"
		         />
		     </RelativeLayout>
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/content"
		        android:orientation="vertical"
		        android:background="@drawable/bg2"
		        android:padding="10dp"
		        >
		            <TextView 
		                android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#0935B0"
			            android:textSize="15dp"
			            android:text="Tên mặt hàng:"
			            android:layout_gravity="center_horizontal"
		            />
		            
			        <EditText 
			        android:id="@+id/addCateTitle"
			        android:layout_width="150dp"
			        android:layout_height="30dp"
			        android:textSize="10dp"
			        android:hint="@string/category_name"
			        android:layout_gravity="center_horizontal"
			        android:layout_margin="10dp"
			        />
			        <TextView 
		                android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#0935B0"
			            android:textSize="10dp"
			            android:text="Chọn ảnh minh họa"
			            android:layout_gravity="center_horizontal"
			            android:layout_margin="10dp"
		            />
			        <ImageView 
			        android:id="@+id/selectImgCate1"
			        android:layout_width="90dp"
			        android:layout_height="90dp"
			        android:layout_gravity="center_horizontal"
			        android:layout_margin="10dp"
			        />
			        
			        <Button
				        android:id="@+id/addCate"
				        android:layout_width="wrap_content"
				        android:layout_height="35dp"
				        android:text="Thêm mặt hàng"
				        android:textSize="10dp"
				        android:layout_gravity="center_horizontal"
				        android:textStyle="bold"
				        android:layout_margin="10dp"
		            />
			        <Button
				        android:id="@+id/updateCate"
				        android:layout_width="wrap_content"
				        android:layout_height="35dp"
				        android:text="Thay đổi"
				        android:textSize="10dp"
				        android:layout_gravity="center_horizontal"
				        android:textStyle="bold"
				        android:layout_margin="10dp"
				        android:visibility="invisible"
		            />
			        <EditText 
				        android:id="@+id/addCateImg"
				        android:layout_width="0dp"
				        android:layout_height="0dp"
				        android:textSize="10dp"
				        android:visibility="invisible"
				        />
		    </LinearLayout>
		 </SlidingDrawer>
		 <LinearLayout
		     android:layout_width="130dp"
		     android:layout_height="40dp"
		     android:layout_alignParentBottom="true"
		     android:background="@drawable/border_list"
		     android:layout_marginBottom="8dp"
		     android:layout_centerInParent="true"
		     android:gravity="center_horizontal|center_vertical"
		     >
		 <ImageView
             android:id="@+id/deleteornot"
		     android:layout_width="27dp"
		     android:layout_height="27dp"
		     android:layout_gravity="center_vertical"
		     android:src="@drawable/delcate"
              />
		 <ImageView
		     android:id="@+id/toggleslide"
		     android:layout_width="25dp"
		     android:layout_height="27dp"
		     android:layout_gravity="center_vertical"
		     android:layout_marginLeft="15dp"
		     android:src="@drawable/pluscate"
              />
		 </LinearLayout>
		 
</RelativeLayout>